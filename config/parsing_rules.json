{
  "comment": "Column mapping and parsing rules for bearing data files",
  
  "column_mappings": {
    "наименование": ["наименование", "название", "товар", "name", "product", "описание", "description", "product_name", "product name"],
    "артикул": ["артикул", "обозначение", "designation", "part", "sku", "part_number", "part number", "article"],
    "аналог": ["аналог", "analog", "equivalent", "analogue"],
    "бренд": ["бренд", "brand", "производитель", "manufacturer", "maker", "factory"],
    "d": ["d", "внутренний диаметр", "внутр. диаметр", "inner diameter", "bore", "н/д", "нд"],
    "D": ["D", "наружный диаметр", "наруж. диаметр", "outer diameter", "о/д", "од"],
    "H": ["H", "B", "ширина", "высота", "width", "height", "thickness"],
    "m": ["m", "масса", "вес", "weight", "mass"]
  },
  
  "dimension_patterns": [
    {
      "comment": "Pattern for dimensions like: d×D×H or dxDxH",
      "regex": "(?P<d>\\d+(?:\\.\\d+)?)\\s*[x×/]\\s*(?P<D>\\d+(?:\\.\\d+)?)\\s*[x×/]\\s*(?P<H>\\d+(?:\\.\\d+)?)",
      "groups": ["d", "D", "H"]
    },
    {
      "comment": "Pattern for dimensions like: dxD",
      "regex": "(?P<d>\\d+(?:\\.\\d+)?)\\s*[x×/]\\s*(?P<D>\\d+(?:\\.\\d+)?)",
      "groups": ["d", "D"]
    }
  ],
  
  "required_fields": {
    "comment": "At least one of these fields must be present in each row",
    "any_of": ["артикул", "наименование"]
  },
  
  "text_normalization": {
    "trim": true,
    "collapse_spaces": true,
    "remove_control_chars": true
  }
}
